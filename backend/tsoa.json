{
  "entryFile": "index.ts",
  "noImplicitAdditionalProperties": "throw-on-extras",

  "spec": {
    "outputDirectory": "public",
    "specVersion": 3
  },
  "compilerOptions": {
    "baseUrl": "./src",
    "paths": {
      "domain/*": ["domain/*"]
    }
  },
  "swagger": {
    "outputDirectory": "./src/swagger",
    "entryFile": "./src/server.ts",
    "host": "localhost:3000",
    "basePath": "/api",
    "schemes": ["http", "https"],
    "specVersion": 3
  },
  "routes": {
    "basePath": "/api",
    "entryFile": "./src/server.ts",
    "routesDir": "./src/controllers"
  }
}